<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.problems.any? %>
      <h3>Problems (<%= @user.problems.count %>)</h3>
      <ol class="problems">
        <%= render @problems %>
      </ol>
      <%= will_paginate @problems %>
    <% end %>
  </div>
</div>