<% provide(:title, 'Add new problem') %>
<h1>Add new problem</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= nested_form_for(@problem) do |f| %>
      <%= render 'fields', f: f %>
      <div><label>Tags:</label></div>
      <%= f.fields_for :tags do |tag_form| %>
        <%= tag_form.text_field :name, class: "tag" %>
        <%= tag_form.link_to_remove "Remove" %>
      <% end %>
      <%= f.link_to_add "Add new tag", :tags %>
      <div style="margin-bottom: 15px;"></div>
      <%= f.submit "Add problem", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
